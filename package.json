{
  "name": "@largence/monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@largence/web",
    "dev:app": "turbo run dev --filter=@largence/app",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@largence/web",
    "build:app": "turbo run build --filter=@largence/app",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=@largence/web",
    "start:app": "turbo run start --filter=@largence/app",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,mdx,css,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "clean:cache": "turbo run clean",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "turbo run db:studio",
    "app": "pnpm --filter @largence/app",
    "web": "pnpm --filter @largence/web",
    "ui": "pnpm --filter @largence/ui"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  }
}