{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": false
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "persistent": true,
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_*",
    "DATABASE_URL",
    "CLERK_*",
    "OPENAI_API_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_STARTER_PRICE_ID",
    "STRIPE_PROFESSIONAL_PRICE_ID",
    "STRIPE_ENTERPRISE_PRICE_ID",
    "STRIPE_WEBHOOK_SECRET",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "NOTION_CLIENT_ID",
    "NOTION_CLIENT_SECRET",
    "RESEND_API_KEY",
    "RESEND_FROM_EMAIL",
    "DROPBOX_CLIENT_ID",
    "DROPBOX_CLIENT_SECRET",
    "DOCUSIGN_CLIENT_ID",
    "DOCUSIGN_CLIENT_SECRET",
    "DOCUSIGN_REDIRECT_URI",
    "DOCUSIGN_AUTH_SERVER",
    "DOCUSIGN_BASE_URL",
    "POLAR_STUDENT_PRODUCT_ID",
    "POLAR_PRO_PRODUCT_ID",
    "POLAR_MAX_PRODUCT_ID",
    "POLAR_WEBHOOK_SECRET",
    "POLAR_ACCESS_TOKEN"
  ],
  "ui": "tui"
}
